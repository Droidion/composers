@page "~/error"
@model Site.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
    ViewData["Description"] = "Error happened. Please go back, use menu to go to the other page, or try again.";
}

<h1>Error.</h1>
<p>An error occurred while processing your request.</p>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
