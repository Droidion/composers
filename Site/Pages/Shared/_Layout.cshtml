@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    var umamiId = Configuration.GetValue("Umami:Id", "");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="@ViewData["Description"]"/>
    <title>@ViewData["Title"] | Opus Classical</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="preload" as="font" type="font/woff2" href="~/fonts/domine-v11-latin-600.woff2" crossorigin>
    <link rel="preload" as="font" type="font/woff2" href="~/fonts/roboto-v20-latin-regular.woff2" crossorigin>
    <link rel="preload" as="font" type="font/woff2" href="~/fonts/roboto-v20-latin-italic.woff2" crossorigin>
    <link rel="preload" as="font" type="font/woff2" href="~/fonts/roboto-v20-latin-300.woff2" crossorigin>
    <script async defer data-website-id="@umamiId" src="https://umami.zunh.dev/umami.js"></script>
</head>
<body>
<partial name="_Header" />

<main class="main" role="main">
    @RenderBody()
</main>

<partial name="_Footer" />
</body>
</html>